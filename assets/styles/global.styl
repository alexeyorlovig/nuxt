//Variables
$fsc = 16px

//Mixins
custom-reset()
  *
    margin 0
    padding 0

  input
  textarea
  button
  input:focus
  textarea:focus
  button:focus
  input:active
  textarea:active
  button:active
  input:hover
  textarea:hover
  button:hover
    outline none
    border none
    box-shadow none
    background none
  button
    cursor pointer
  a
    text-decoration none
  ul
    list-style none
  img
    height: auto

psedo-elemens()
      position absolute
      content ''
      left 0
      top 0

//Global styles
html
  font-size: $fsc

custom-reset()
